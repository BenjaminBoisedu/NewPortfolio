<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
</head>
<body>
  <h1>Mes diff√©rents projets</h1>
  <form action="/projects" method="GET">
    <label>Name's project</label>
    <input type="text" name="title" placeholder="Search..." value="<%= searchOptions.title %>" />
    <label>Tag's project</label>
    <input type="text" name="tag" placeholder="Search..." value="<%= searchOptions.tag %>"/>
    <button type="submit">Search</button>
  </form>
  <br />
  <% projects.forEach((project) => { %>
    <div>
      <h3><%= project.title %></h3>
      <p><%= project.description %></p>
      <p><%= project.tag %></p>
      <p><%= project.date %></p>
      <img height="fit-content" width="fit-content"  src="<%= project.ProjectImagePath %>">
      <div>
        <p>
          <a href="/projects/<%= project._id %>">Details</a>
          <a href="/projects/<%= project._id %>/edit">Edit</a>
          <form action="/projects/<%= project._id %>?_method=DELETE" method="post">
            <button type="submit">Delete</button>
          </form>
        </p>
      </div>
    </div>
    <% }) %>
    <br />
    
  </body>
    </html>